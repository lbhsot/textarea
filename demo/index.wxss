page {
  padding: 20rpx;
  box-sizing: border-box;
  height: 200%; 
}
.wrap {
  height: 110rpx;
}
.item  {
  margin: 20rpx 0;
  border: 1px solid red;
}
textarea {
  height: 110rpx;
  display: block;
  width: auto;
  box-sizing: border-box;
}
.textarea {
  padding: 20rpx !important;
}
.placeholder {
  top: 20rpx !important;
  left: 20rpx !important;
}
.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.50);
  z-index: 12;
}
.title {
  background: #FFF;
  padding: 150rpx;
  text-align: center;
}
.popup {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #FFF;
}